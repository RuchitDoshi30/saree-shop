    <path d="M120 135 Q140 130 160 135" stroke="#ffffff" stroke-width="1" fill="none"/>
    <path d="M170 140 Q190 135 210 140" stroke="#ffffff" stroke-width="1" fill="none"/>
    <path d="M75 160 Q95 155 115 160" stroke="#ffffff" stroke-width="1" fill="none"/>
    <path d="M125 165 Q145 160 165 165" stroke="#ffffff" stroke-width="1" fill="none"/>
    <path d="M175 170 Q195 165 215 170" stroke="#ffffff" stroke-width="1" fill="none"/>
