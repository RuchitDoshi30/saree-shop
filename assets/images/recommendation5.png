  <!-- Cotton Saree Base -->
  <path d="M55 105 Q150 85 245 105 Q255 215 245 325 Q185 345 125 325 Q55 305 55 215 Z" 
        fill="url(#cottonGradient)" opacity="0.8"/>
  
