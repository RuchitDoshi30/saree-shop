<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 600" style="background: linear-gradient(135deg, #f8f5e4 0%, #fefdf8 100%);">
  <!-- Background -->
  <rect width="400" height="600" fill="url(#mainBg)"/>
  
  <!-- Gradients and Patterns -->
  <defs>
    <linearGradient id="mainBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#f8f5e4"/>
      <stop offset="100%" stop-color="#fefdf8"/>
    </linearGradient>
    
    <linearGradient id="sareeGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#8b0000"/>
      <stop offset="30%" stop-color="#a0522d"/>
      <stop offset="70%" stop-color="#8b0000"/>
      <stop offset="100%" stop-color="#5d0000"/>
    </linearGradient>
    
    <pattern id="zariPattern" patternUnits="userSpaceOnUse" width="40" height="40">
      <rect width="40" height="40" fill="#8b0000"/>
      <circle cx="20" cy="20" r="8" fill="#daa520" opacity="0.8"/>
      <path d="M20 8 Q28 12 20 20 Q12 12 20 8" fill="#ffd700" opacity="0.9"/>
      <path d="M20 20 Q28 28 20 32 Q12 28 20 20" fill="#ffd700" opacity="0.9"/>
      <circle cx="8" cy="8" r="2" fill="#daa520" opacity="0.6"/>
      <circle cx="32" cy="8" r="2" fill="#daa520" opacity="0.6"/>
      <circle cx="8" cy="32" r="2" fill="#daa520" opacity="0.6"/>
      <circle cx="32" cy="32" r="2" fill="#daa520" opacity="0.6"/>
    </pattern>
    
    <pattern id="borderPattern" patternUnits="userSpaceOnUse" width="60" height="20">
      <rect width="60" height="20" fill="#8b0000"/>
      <path d="M10 10 Q20 5 30 10 Q40 15 50 10" stroke="#daa520" stroke-width="2" fill="none"/>
      <circle cx="15" cy="10" r="2" fill="#ffd700" opacity="0.8"/>
      <circle cx="45" cy="10" r="2" fill="#ffd700" opacity="0.8"/>
    </pattern>
  </defs>
  
  <!-- Main Saree Drape -->
  <path d="M60 100 Q200 80 340 100 Q350 350 340 550 Q250 570 150 550 Q60 530 60 350 Z" 
        fill="url(#zariPattern)" opacity="0.95"/>
  
  <!-- Base Fabric Layer -->
  <path d="M70 110 Q200 90 330 110 Q340 350 330 540 Q250 560 150 540 Q70 520 70 350 Z" 
        fill="url(#sareeGradient)" opacity="0.7"/>
  
  <!-- Rich Pallu (decorative end) -->
  <path d="M250 100 Q320 110 340 150 L340 280 Q310 270 280 260 Q250 250 250 200 Z" 
        fill="url(#zariPattern)" opacity="1"/>
  
  <!-- Intricate Border -->
  <path d="M60 530 Q200 510 340 530" 
        stroke="url(#borderPattern)" stroke-width="15" fill="none"/>
  <path d="M65 520 Q200 500 335 520" 
        stroke="#daa520" stroke-width="4" fill="none"/>
  <path d="M70 515 Q200 495 330 515" 
        stroke="#ffd700" stroke-width="2" fill="none"/>
  
  <!-- Elegant Motifs -->
  <g opacity="0.9">
    <!-- Central Floral Motif -->
    <g transform="translate(200,300)">
      <circle cx="0" cy="0" r="15" fill="#daa520" opacity="0.8"/>
      <path d="M0 -10 Q8 -5 0 0 Q-8 -5 0 -10" fill="#ffd700"/>
      <path d="M0 0 Q8 5 0 10 Q-8 5 0 0" fill="#ffd700"/>
      <path d="M-10 0 Q-5 -8 0 0 Q-5 8 -10 0" fill="#ffd700"/>
      <path d="M0 0 Q5 -8 10 0 Q5 8 0 0" fill="#ffd700"/>
      <circle cx="0" cy="0" r="3" fill="#ffffff" opacity="0.8"/>
    </g>
    
    <!-- Side Motifs -->
    <g transform="translate(120,200)">
      <circle cx="0" cy="0" r="8" fill="#daa520" opacity="0.6"/>
      <path d="M0 -6 Q5 -3 0 0 Q-5 -3 0 -6" fill="#ffd700" opacity="0.8"/>
      <path d="M0 0 Q5 3 0 6 Q-5 3 0 0" fill="#ffd700" opacity="0.8"/>
    </g>
    
    <g transform="translate(280,400)">
      <circle cx="0" cy="0" r="10" fill="#daa520" opacity="0.7"/>
      <path d="M0 -7 Q6 -4 0 0 Q-6 -4 0 -7" fill="#ffd700" opacity="0.9"/>
      <path d="M0 0 Q6 4 0 7 Q-6 4 0 0" fill="#ffd700" opacity="0.9"/>
      <circle cx="0" cy="0" r="2" fill="#ffffff" opacity="0.6"/>
    </g>
  </g>
  
  <!-- Shimmer Effects -->
  <g opacity="0.4">
    <path d="M80 150 Q120 140 160 150" stroke="#ffffff" stroke-width="1" fill="none"/>
    <path d="M180 180 Q220 170 260 180" stroke="#ffffff" stroke-width="1" fill="none"/>
    <path d="M100 250 Q140 240 180 250" stroke="#ffffff" stroke-width="1" fill="none"/>
    <path d="M220 320 Q260 310 300 320" stroke="#ffffff" stroke-width="1" fill="none"/>
  </g>
  
  <!-- Royal Blouse Area -->
  <rect x="120" y="90" width="160" height="60" rx="8" 
        fill="url(#zariPattern)" opacity="0.9"/>
  <rect x="125" y="95" width="150" height="50" rx="5" 
        fill="#8b0000" opacity="0.8"/>
  
  <!-- Blouse Embellishments -->
  <g opacity="0.9">
    <circle cx="140" cy="110" r="3" fill="#daa520"/>
    <circle cx="160" cy="115" r="2.5" fill="#ffd700"/>
    <circle cx="180" cy="110" r="3" fill="#daa520"/>
    <circle cx="200" cy="115" r="2.5" fill="#ffd700"/>
    <circle cx="220" cy="110" r="3" fill="#daa520"/>
    <circle cx="240" cy="115" r="2.5" fill="#ffd700"/>
    <circle cx="260" cy="110" r="3" fill="#daa520"/>
  </g>
  
  <!-- Heritage Texture Lines -->
  <g opacity="0.2">
    <path d="M70 130 Q200 120 330 130" stroke="#000000" stroke-width="0.5" fill="none"/>
    <path d="M75 160 Q200 150 325 160" stroke="#000000" stroke-width="0.5" fill="none"/>
    <path d="M80 190 Q200 180 320 190" stroke="#000000" stroke-width="0.5" fill="none"/>
  </g>
  
  <!-- Brand Mark -->
  <text x="200" y="40" text-anchor="middle" font-family="serif" 
        font-size="14" font-weight="bold" fill="#8b0000" opacity="0.6">Banarasi Royal Maroon</text>
</svg>