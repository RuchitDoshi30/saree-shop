<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 600" style="background: linear-gradient(135deg, #f8f5e4 0%, #fefdf8 100%);">
  <!-- Background -->
  <rect width="400" height="600" fill="url(#fabricBg)"/>
  
  <!-- Gradients and Patterns -->
  <defs>
    <linearGradient id="fabricBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#f8f5e4"/>
      <stop offset="100%" stop-color="#fefdf8"/>
    </linearGradient>
    
    <linearGradient id="silkGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#8b0000"/>
      <stop offset="20%" stop-color="#a0522d"/>
      <stop offset="40%" stop-color="#daa520"/>
      <stop offset="60%" stop-color="#a0522d"/>
      <stop offset="80%" stop-color="#8b0000"/>
      <stop offset="100%" stop-color="#8b0000"/>
    </linearGradient>
    
    <pattern id="weavingPattern" patternUnits="userSpaceOnUse" width="8" height="8">
      <rect width="8" height="8" fill="#8b0000"/>
      <rect x="0" y="0" width="4" height="4" fill="#daa520" opacity="0.3"/>
      <rect x="4" y="4" width="4" height="4" fill="#daa520" opacity="0.3"/>
      <rect x="2" y="2" width="4" height="4" fill="#ffd700" opacity="0.2"/>
    </pattern>
    
    <pattern id="silkSheen" patternUnits="userSpaceOnUse" width="20" height="20" patternTransform="rotate(45)">
      <rect width="20" height="20" fill="transparent"/>
      <rect x="0" y="8" width="20" height="4" fill="#ffffff" opacity="0.1"/>
      <rect x="0" y="16" width="20" height="2" fill="#ffffff" opacity="0.05"/>
    </pattern>
  </defs>
  
  <!-- Main Fabric Area -->
  <rect x="50" y="100" width="300" height="400" 
        fill="url(#silkGradient)" rx="10"/>
  
  <!-- Weave Texture Overlay -->
  <rect x="50" y="100" width="300" height="400" 
        fill="url(#weavingPattern)" opacity="0.4" rx="10"/>
  
  <!-- Silk Sheen Effect -->
  <rect x="50" y="100" width="300" height="400" 
        fill="url(#silkSheen)" opacity="0.6" rx="10"/>
  
  <!-- Close-up Weave Detail -->
  <g transform="translate(200,300)">
    <!-- Magnified Weaving Structure -->
    <rect x="-80" y="-80" width="160" height="160" 
          fill="#8b0000" opacity="0.9" rx="8"/>
    
    <!-- Warp Threads (Vertical) -->
    <g opacity="0.8">
      <rect x="-75" y="-75" width="6" height="150" fill="#daa520"/>
      <rect x="-60" y="-75" width="6" height="150" fill="#ffd700"/>
      <rect x="-45" y="-75" width="6" height="150" fill="#daa520"/>
      <rect x="-30" y="-75" width="6" height="150" fill="#8b0000"/>
      <rect x="-15" y="-75" width="6" height="150" fill="#daa520"/>
      <rect x="0" y="-75" width="6" height="150" fill="#ffd700"/>
      <rect x="15" y="-75" width="6" height="150" fill="#daa520"/>
      <rect x="30" y="-75" width="6" height="150" fill="#8b0000"/>
      <rect x="45" y="-75" width="6" height="150" fill="#daa520"/>
      <rect x="60" y="-75" width="6" height="150" fill="#ffd700"/>
    </g>
    
    <!-- Weft Threads (Horizontal) -->
    <g opacity="0.7">
      <rect x="-75" y="-70" width="150" height="4" fill="#8b0000"/>
      <rect x="-75" y="-55" width="150" height="4" fill="#daa520"/>
      <rect x="-75" y="-40" width="150" height="4" fill="#ffd700"/>
      <rect x="-75" y="-25" width="150" height="4" fill="#8b0000"/>
      <rect x="-75" y="-10" width="150" height="4" fill="#daa520"/>
      <rect x="-75" y="5" width="150" height="4" fill="#ffd700"/>
      <rect x="-75" y="20" width="150" height="4" fill="#8b0000"/>
      <rect x="-75" y="35" width="150" height="4" fill="#daa520"/>
      <rect x="-75" y="50" width="150" height="4" fill="#ffd700"/>
      <rect x="-75" y="65" width="150" height="4" fill="#8b0000"/>
    </g>
    
    <!-- Gold Thread Highlights -->
    <g opacity="0.9">
      <!-- Diagonal gold threads for richness -->
      <path d="M-70 -70 L70 70" stroke="#ffd700" stroke-width="1" opacity="0.6"/>
      <path d="M-50 -70 L70 50" stroke="#daa520" stroke-width="0.8" opacity="0.5"/>
      <path d="M-30 -70 L70 30" stroke="#ffd700" stroke-width="1" opacity="0.6"/>
      <path d="M-10 -70 L70 10" stroke="#daa520" stroke-width="0.8" opacity="0.5"/>
      
      <!-- Cross pattern -->
      <path d="M-70 70 L70 -70" stroke="#ffd700" stroke-width="0.6" opacity="0.4"/>
      <path d="M-50 70 L70 -50" stroke="#daa520" stroke-width="0.5" opacity="0.3"/>
    </g>
    
    <!-- Weave Intersection Points -->
    <g opacity="0.8">
      <circle cx="-60" cy="-60" r="2" fill="#ffd700"/>
      <circle cx="-30" cy="-30" r="2" fill="#daa520"/>
      <circle cx="0" cy="0" r="2" fill="#ffd700"/>
      <circle cx="30" cy="30" r="2" fill="#daa520"/>
      <circle cx="60" cy="60" r="2" fill="#ffd700"/>
      
      <circle cx="-60" cy="60" r="2" fill="#daa520"/>
      <circle cx="-30" cy="30" r="2" fill="#ffd700"/>
      <circle cx="30" cy="-30" r="2" fill="#ffd700"/>
      <circle cx="60" cy="-60" r="2" fill="#daa520"/>
    </g>
  </g>
  
  <!-- Fabric Quality Indicators -->
  <g transform="translate(100,180)" opacity="0.6">
    <!-- Thread count markers -->
    <circle cx="0" cy="0" r="3" fill="#daa520"/>
    <text x="8" y="4" font-family="serif" font-size="8" fill="#5a4a5a">400 TC</text>
  </g>
  
  <g transform="translate(280,180)" opacity="0.6">
    <!-- Silk grade marker -->
    <circle cx="0" cy="0" r="3" fill="#ffd700"/>
    <text x="8" y="4" font-family="serif" font-size="8" fill="#5a4a5a">Pure Silk</text>
  </g>
  
  <!-- Texture Lines for Fabric Feel -->
  <g opacity="0.3">
    <path d="M70 150 Q120 155 170 150 Q220 145 270 150 Q320 155 350 150" 
          stroke="#000000" stroke-width="0.5" fill="none"/>
    <path d="M70 170 Q120 175 170 170 Q220 165 270 170 Q320 175 350 170" 
          stroke="#000000" stroke-width="0.5" fill="none"/>
    <path d="M70 430 Q120 435 170 430 Q220 425 270 430 Q320 435 350 430" 
          stroke="#000000" stroke-width="0.5" fill="none"/>
    <path d="M70 450 Q120 455 170 450 Q220 445 270 450 Q320 455 350 450" 
          stroke="#000000" stroke-width="0.5" fill="none"/>
  </g>
  
  <!-- Silk Shine Highlights -->
  <g opacity="0.4">
    <ellipse cx="150" cy="200" rx="30" ry="8" fill="#ffffff" transform="rotate(45 150 200)"/>
    <ellipse cx="250" cy="300" rx="25" ry="6" fill="#ffffff" transform="rotate(-30 250 300)"/>
    <ellipse cx="180" cy="400" rx="35" ry="9" fill="#ffffff" transform="rotate(60 180 400)"/>
  </g>
  
  <!-- Title -->
  <text x="200" y="50" text-anchor="middle" font-family="serif" 
        font-size="16" font-weight="bold" fill="#8b0000">Premium Silk Weave</text>
  
  <!-- Description -->
  <text x="200" y="550" text-anchor="middle" font-family="serif" 
        font-size="12" fill="#5a4a5a">400 Thread Count Banarasi Silk</text>
</svg>